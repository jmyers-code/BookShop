@model Company
@{
    ViewData["Title"] = "Details";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-9">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">Company Details</h2>
                    <hr />
                </div>
                @*<div asp-validation-summary="All"></div>*@
                <div class="mb-3 col-6">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"  disabled/>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="StreetAddress"></label>
                    <textarea asp-for="StreetAddress" rows="3" class="form-control" disabled></textarea>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" disabled/>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="State"></label>
                    <input asp-for="State" class="form-control" disabled/>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="PostalCode"></label>
                    <input asp-for="PostalCode" class="form-control" disabled/>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" disabled/>
                </div>
                <div class="mb-3 col-12">
                    <a class="btn btn-secondary" asp-controller="Company" asp-action="Index" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

</form>

