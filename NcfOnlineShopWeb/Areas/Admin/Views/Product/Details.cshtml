@model Product
@{
    ViewData["Title"] = "Details";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <input asp-for="ImageUrl" hidden />
    <div class="row">
        <div class="col-9">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">Product Details</h2>
                    <hr />
                </div>
                @*<div asp-validation-summary="All"></div>*@
                <div class="mb-3 col-6">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control"  disabled/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="3" class="form-control" disabled></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="ISBN"></label>
                    <input asp-for="ISBN" class="form-control" disabled/>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" class="form-control" disabled/>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="ListPrice"></label>
                    <input asp-for="ListPrice" class="form-control" disabled/>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" disabled/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Price50"></label>
                    <input asp-for="Price50" class="form-control" disabled/>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Price100"></label>
                    <input asp-for="Price100" class="form-control" disabled/>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                @*<div class="mb-3">
                    <label asp-for="Product.ImageUrl"></label>
                    <input type="file" id="uploadBox" name="file" class="form-control" />
                </div>*@
                <div class="mb-3 col-6">
                    <label asp-for="Category"></label>
                    <input asp-for="Category.Name" class="form-select" disabled/>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="CoverType"></label>
                    <input asp-for="CoverType.Name" class="form-select" disabled/>
                </div>
                <div class="mb-3 col-12">
                    <a class="btn btn-secondary" asp-controller="Product" asp-action="Index" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
        <div class="col-3 pt-4">
            <img src="@Model.ImageUrl"
                 width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>

</form>

